<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3e3e3"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/serverinfofragment_cputilizationtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="@string/serverinfofragment_cputilizationtitle"
        android:textColor="@color/text_subtle"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/serverinfofragment_cputilization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/serverinfofragment_cputilizationtitle"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-thin"
        android:gravity="center_horizontal"
        android:text="@string/serverinfofragment_cputilization"
        android:textColor="@color/text_main"
        android:textSize="80sp" />

</RelativeLayout>