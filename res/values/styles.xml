<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_loaned</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Loaned</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Loaned</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Loaned</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Loaned</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Loaned</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_loaned</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_loaned</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Loaned</item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Loaned.Widget</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ActionBar.Solid.Loaned" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_loaned</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_loaned</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_loaned</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Loaned</item>
    </style>

    <style name="ActionBar.Transparent.Loaned" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_loaned</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Loaned</item>
    </style>

    <style name="PopupMenu.Loaned" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_loaned</item>
    </style>

    <style name="DropDownListView.Loaned" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_loaned</item>
    </style>

    <style name="ActionBarTabStyle.Loaned" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_loaned</item>
    </style>

    <style name="DropDownNav.Loaned" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_loaned</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_loaned</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_loaned</item>
    </style>

    <style name="ProgressBar.Loaned" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_loaned</item>
    </style>

    <style name="ActionButton.CloseMode.Loaned" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_loaned</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Loaned.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Loaned</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Loaned</item>
    </style>

    <style name="EmptyStateText" parent="@android:style/Widget.Holo.TextView">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#777777</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>